<body>
    <p>YouTube Subscribe Button</p>
    <button onclick="
       subscribe();
    " class="js-subs-button subs-button">Subscribe</button>
    

    <p>Amazon Shopping Calculator</p>
    <input placeholder=" Enter the Cost" 
    class="js-cost-input cost-input"
    onkeydown="handleCostKeydown(event)">
    
    <button onclick="
        calculateTotal();
    " class="calculate-button">Calculate</button>

    <p class="js-total-cost"></p>

    <script>

        function handleCostKeydown(event) {
            if(event.key === 'Enter'){
                calculateTotal();
            }
        }

        function calculateTotal() {
            const inputElement = document.querySelector('.js-cost-input')

            let cost = Number(inputElement.value);

            if(cost < 40) {
                cost += 10;
            }

            document.querySelector('.js-total-cost')
            .innerHTML = `$${cost}`;
            
        }


        function subscribe(){
            const butttonElement = document.querySelector('.js-subs-button');

            if(butttonElement.innerHTML === 'Subscribe'){
                butttonElement.innerHTML = 'Subscribed';
                butttonElement.classList.add('is-subscribed');
            } else{
                butttonElement.innerHTML = 'Subscribe';
                butttonElement.classList.remove('is-subscribed');
            }
        }
    </script>
    
</body>
</html>
